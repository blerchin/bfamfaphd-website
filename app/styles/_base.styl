// http://paulirish.com/2012/box-sizing-border-box-ftw
* { box-sizing: border-box; }

//FONTS
body-copy = 'Monotype Bodoni W01'
sans-bold = 'OCR A Extended W01'

//COLORS
dark-grey = #111111
light-blue = #62C7EF
gold = #EFC060

//WIDTHS
col-width = 550px

body,
input
    font-family sans-bold
    font-weight 100
		color: dark-grey
    text-rendering optimizeLegibility
p
	font-family sans-bold
	font-size: 19px
	max-width: col-width
	line-height 1.4em
	&.small
		font-size 16px
		line-height 1.2em

ul 
	max-width col-width
	li
		line-height 1.3em
		
		
	
#wrapper
	width 100%
	min-width 400px
	margin 0 auto 200px auto

#container
	margin-top 10%
	margin-bottom 200px


header.main.bar.top
	font-size 1.3em
	position fixed
	top 0
	left 0
	width 100%
	padding 0
	background-color dark-grey
	z-index 1000

	ul.nav
		margin: .5em auto 0 auto
		width 70%
		max-width none
		padding 0

	.nav li
		display inline-block
		list-style none
		margin 0 .5em .5em 0
		color white

	.nav li a:hover
		color gold

	.nav li.active a
		color: gold

	.nav li:nth-child(even) a:hover
			color light-blue
	
	a
		color white
		text-decoration none

.slide
	width 70%
	margin 1em auto
	min-width 400px
	position relative

	.background.graphic
		position relative
		width 100%
		height 100%
		z-index 0
		iframe
			z-index 0

.aside
	width 100%
	position relative
	.caption	
		padding .5em 2em
	a.embiggen
		display block
		width 100%
		height 100%
	a.action
		p
			position absolute
			right 30px
			bottom 0px
			background-color dark-grey
			color white
			padding 1em
			opacity .7
		p:hover
			opacity 1
	a.download
		p
			left 30px
			right auto
img.graph
	width 100%
	height auto


h1.lead 
	font-weight 400
	font-size 2.5em
	width: 100%
	background-size cover
	background-repeat no-repeat
	p
		line-height 1.1em
		font-size inherit
		font-weight inherit
		margin 5px
		max-width none

#container > h2
	margin 1em 15%

h2
	font-size 2em

h3
	font-weight 100
	overflow auto
	margin-top 2em
	p
		font-size inherit

form
	display block
	overflow hidden
	margin-bottom 4em
	dd, dt
		font-family sans-bold
		font-size 16px
		margin .25em 1em .25em 0
		float left
		width: 10em
	dt
		clear left
	input
		padding-left .3em



	

.blue
	color light-blue
.gold
	color gold


footer
	width 70%
	margin 1em auto
	min-width 400px

/***************
SLIDE SPECIFIC
***************/
.slide-2
	background-image url('../images/bfamfaphd.png')
	background-repeat no-repeat
	height: 300px
.slide-3
	font-size 18px
.slide-5.aside
	background-image url('../images/bfamfaphd.png')
	background-repeat no-repeat
	height: 300px
.slide-11
	ul dd
		margin-bottom .5em


@media (max-width: 945px)
	h1
		max-width 450px

@media (max-width: 768px)
	header.main.bar.top ul.nav
		margin-left 15%
		max-width none
		width auto
		overflow hidden
		display block

@media (max-width: 722px)
	#container
		margin-top 150px
	header.main.bar.top ul.nav
		margin-left 20px
		margin-right 20px
	p, h2, h3, form dl
		margin-left 20px
		margin-right 20px
	form
		dt, dl
			float none
			margin-bottom .2em
		
	
